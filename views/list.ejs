<%- include('header') %>
   <div class="box">
            <% newItem.forEach((x) => { %>
                <% if(x !== '') { %>
                <form action="/remove" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox">
                        <p class="text"><%= x.name %></p>
                        <button id="one" type="submit" name="delete" value="<%=x._id%>"><ion-icon name="trash-outline" class="delete"></ion-icon></button>
                    </div>
                    <input type="hidden" name="listName" value="<%= listTitle %>">
                </form>
                 <%}%>
             <%})%>
        <form action="/" method="post" class="item">
            <input type="text" name="newItem" placeholder="Add new item" autocomplete="off">
            <button id="two" type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>
<%- include('footer') %>